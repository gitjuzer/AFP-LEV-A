<phpunit bootstrap="vendor/autoload.php">
    <filter>
        <whitelist
                addUncoveredFilesFromWhitelist="true"
                processUncoveredFilesFromWhitelist="true">

            <directory suffix=".php">./src/</directory>
            <exclude>
                <directory suffix=".php">./src/0_ignored/</directory>
                <directory suffix=".php">./src/0_shared/</directory>
                <directory suffix=".php">./src/1_api/</directory>
                <directory suffix=".php">./src/3_repository/</directory>
                <directory suffix=".php">./src/4_data/</directory>
            </exclude>
        </whitelist>

    </filter>
    <testsuites>
        <testsuite name="test_suite">
            <directory>tests</directory>
        </testsuite>
    </testsuites>
    <logging>
        <log type="coverage-html" target="./log/codeCoverage" charset="UTF-8" yui="true" highlight="true"
             lowUpperBound="50" highLowerBound="80"/>
        <log type="testdox-html" target="./log/testdox.html"/>
    </logging>
</phpunit>